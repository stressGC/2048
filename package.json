{
	"name": "2048-game",
	"version": "1.0.0",
	"description": "Remake of the famous 2048 game in TDD",
	"scripts": {
		"prepare": "is-ci || husky install",
		"start": "run-s clean && run-p _dev:*",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:ci": "jest --runInBand",
		"_dev:css": "tailwindcss build -o src/tailwind.generated.css --watch",
		"_dev:parcel": "parcel src/index.html --hmr-port 38483",
		"prettify": "prettier . --write",
		"clean": "rm -rf dist .cache src/dist src/.cache src/config.ts .env",
		"build": "run-s _build:*",
		"_build:css": "tailwindcss build -o src/tailwind.generated.css --minify",
		"_build:parcel": "parcel build src/index.html --no-source-maps --no-cache",
		"lint": "run-s _build:css _lint:*",
		"_lint:src": "eslint 'src/**/*.{ts,tsx}' --max-warnings=0",
		"tsc-diagnostics": "tsc --diagnostics:*",
		"check": "run-s lint tsc-diagnostics"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/stressgc/2048-game.git"
	},
	"author": "stressgc | Georges Cosson",
	"license": "UNLICENSED",
	"bugs": {
		"url": "https://github.com/stressgc/2048-game/issues"
	},
	"devDependencies": {
		"@babel/core": "^7.16.5",
		"@babel/preset-env": "7.3.4",
		"@babel/preset-react": "^7.16.5",
		"@babel/preset-typescript": "^7.16.5",
		"@commitlint/cli": "^12.1.1",
		"@commitlint/config-conventional": "^12.1.1",
		"@types/jest": "^27.0.3",
		"@types/lodash": "^4.14.168",
		"@types/react": "^16.14.21",
		"@types/react-dom": "^16.8.3",
		"@typescript-eslint/eslint-plugin": "^4.14.0",
		"@typescript-eslint/parser": "^4.14.0",
		"autoprefixer": "^10.3.5",
		"babel-jest": "^27.4.5",
		"css-loader": "^6.5.1",
		"eslint": "^7.3.1",
		"eslint-config-prettier": "^8.2.0",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-prefer-arrow": "^1.2.1",
		"eslint-plugin-react": "^7.20.0",
		"eslint-plugin-react-hooks": "^4.2.0",
		"husky": "^6.0.0",
		"is-ci": "^3.0.0",
		"jest": "^27.4.5",
		"jest-junit": "^13.0.0",
		"npm-run-all": "^4.1.5",
		"parcel-bundler": "^1.12.3",
		"postcss": "^8.3.7",
		"prettier": "^2.2.1",
		"tailwindcss": "^3.1.5",
		"typescript": "^4.1.3"
	},
	"dependencies": {
		"clsx": "^1.1.1",
		"lodash": "^4.17.21",
		"react": "^16.14.0",
		"react-dom": "^16.8.3",
		"react-use": "^17.4.0"
	}
}
